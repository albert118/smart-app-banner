        "typescript": "^5.8.2",
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.2.3",
        "@vue/compiler-sfc": "^3.5.13",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.13.9",
        "happy-dom": "^17.4.6",
        "jsdom": "^26.0.0",
        "prettier": "3.5.3",
        "rollup-plugin-copy": "^3.5.0",
        "sass-embedded": "^1.87.0",
        "typescript": "~5.8.0",
        "vite": "^6.3.5",
