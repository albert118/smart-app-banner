{
    "name": "smart-app-banner/vue-plugin",
    "shortName": "Smart App Banner - Vue Plugin",
    "description": "A Vue Plugin for the Smart App Banner",
    "homepage": "https://github.com/albert118/smart-app-banner/",
    "author": "Albert Ferguson <albertferguson118@gmail.com>",
    "license": "MIT",
    "bugs": {
